        <Label x:Name="CalendarWeekday6Name" Grid.Column="5" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Foreground="#FFFF9A" Content="{Binding Saturday, FallbackValue=Saturday, Mode=OneWay}" />
        <Label x:Name="CalendarWeekday7Name" Grid.Column="6" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Foreground="#FFFF9A" Content="{Binding Sunday, FallbackValue=Sunday, Mode=OneWay}" />

