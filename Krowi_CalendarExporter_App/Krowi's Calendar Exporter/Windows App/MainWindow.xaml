        <Label x:Name="CalendarWeekday1Name" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Foreground="#FFFF9A" Content="{Binding Monday, FallbackValue=Monday, Mode=OneWay}" />
